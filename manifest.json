{
  "name": "Songza Hotkeys",
  "version": "1.0",
  "description": "Allows the keyboard play/pause/skip buttons to control Sognza",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action" :
  {
    "default_title" : "Keyboard shortcuts to control the music are enabled.",
    "default_icon" : "pause.png"
  },
  "permissions" : [
    "declarativeContent",
    "*://*.songza.com/"
  ],
  "icons" : {
    "19" : "pause.png",
    "38" : "pause@2x.png"
  },
  "commands" : {
    "play-pause" : {
      "suggested_key": {
        "default": "Ctrl+Shift+8"
      },
      "description": "Play or pause the current track",
      "global": true
    },
    "next-track": {
      "suggested_key": {
        "default": "Ctrl+Shift+9"
      },
      "description": "Skip the current track",
      "global": true
    }
  },
  "manifest_version": 2
}
